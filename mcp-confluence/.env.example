# JWT Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Confluence OAuth (Cloud)
CONFLUENCE_CLIENT_ID=your-confluence-client-id
CONFLUENCE_CLIENT_SECRET=your-confluence-client-secret
CONFLUENCE_REDIRECT_URI=http://localhost:8001/api/confluence/callback

# Confluence Server/Data Center (optional, for non-cloud instances)
CONFLUENCE_BASE_URL=https://your-instance.atlassian.net
CONFLUENCE_API_TOKEN=

# LlamaCloud
LLAMA_CLOUD_API_KEY=your-llama-cloud-api-key
LLAMA_CLOUD_PROJECT_ID=your-llama-cloud-project-id

# Database
DATABASE_URL=sqlite:///./confluence_sync.db

# Sync settings
DEFAULT_SYNC_INTERVAL_MINUTES=60
TEMP_FILES_DIR=./temp_files

# API Settings
API_HOST=0.0.0.0
API_PORT=8001